{
  "compilerOptions": {
    "outDir": "./static/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "es6",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es2019", "dom"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.d.ts"],
  "ts-node": {
    "files": true
  }
}
